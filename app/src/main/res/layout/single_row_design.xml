<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="2sp"
    android:layout_marginEnd="2sp"
    android:background="#00FFFFFF"
    android:elevation="5sp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="7dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="2dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="2sp"
            android:src="@mipmap/ic_launcher"
            app:civ_border_color="@color/design_default_color_primary"
            app:civ_border_width="2sp" />

        <TextView
            android:id="@+id/t1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="0sp"
            android:layout_toRightOf="@id/img1"
            android:gravity="center_vertical"
            android:text="This is Header Text"
            android:layout_marginEnd="60sp"
            android:textColor="#000"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/t2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/t1"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@id/img1"
            android:text="This is Description Text"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/t3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/t2"
            android:layout_marginStart="5sp"
            android:layout_marginEnd="10sp"
            android:layout_toRightOf="@id/img1"
            android:text="Deadline"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/t4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/t2"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@id/t3"
            android:text="Test date"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/del"
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:layout_toRightOf="@id/t1"
            android:layout_marginTop="5sp"
            android:layout_marginEnd="5sp"
            android:background="@drawable/circle"
            android:layout_marginStart="-50sp"
            android:src="@drawable/cancel" />

        <ImageView
            android:id="@+id/edit"
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:layout_toRightOf="@id/del"
            android:layout_marginTop="5sp"
            android:layout_marginStart="5sp"
            android:background="@drawable/circle"
            android:src="@drawable/pencil" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>